@model IEnumerable<BookStore.Models.BookModels>

@{
    ViewBag.Title = "Books for sale";
}

<p class="text-center">    
    @if (ViewBag.Admin)
    {
        @Html.ActionLink("Add new book", "Create", null, new { @class = "btn btn-default" })
    }
</p>

<div class="container flex-center">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 mb-5 ">
                <div class="container-fluid">
                    <div class="card-deck">
                        <div class="card" style="width:18rem">
                            @if (item.ImageData == null)
                            {
                                <img class="card-img-top" style='max-width:310px; max-height:450px;' src="~/Content/img/No_Photo_Available.jpg" alt="Card image cap">
                            }
                            else
                            {
                                @Html.Raw("<img style='max-width:310px; max-height:450px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.ImageData) + "\" />")
                            }
                            <div class="card-body pb-0" style="height:121px">
                                <h5 class="card-title font-weight-bold text-center">@Html.ActionLink(@item.Name, "Details", new { id = item.Id }, new { @class = "nav-link" })</h5>

                            </div>
                            <hr />
                            <div class="card-body text-center pt-0">
                                @Html.ActionLink("Add to cart", "AddToCart", "Cart", new { id = item.Id, returnUrl = Request.Url.PathAndQuery }, new { @class = "card-link" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
